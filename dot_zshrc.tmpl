stty -ixon

export ZSH=$HOME/.oh-my-zsh
ZSH_THEME="arrow"
plugins=(git)
source $ZSH/oh-my-zsh.sh

# PATH
export PATH=$HOME/.local/bin:$PATH

# mise
eval "$(~/.local/bin/mise activate zsh)"
eval "$(git wt --init zsh)"

# Aliases
alias vim="nvim"
alias rp='cd $(ghq list -p | fzf --with-nth=5.. -d/)'
alias trel="tmux source-file ~/.tmux.conf && echo 'Reloaded!'"
alias taf='tmux attach -t $(tmux list-sessions -F "#{session_name}" | fzf)'
alias tkf='tmux kill-session -t $(tmux list-sessions -F "#{session_name}" | fzf)'
alias tkw='tmux kill-window -t $(tmux list-windows -F "#{window_index}: #{window_name}" | fzf | cut -d: -f1)'
alias hcp="history | sed 's/^ *[0-9]* *//' | awk '!seen[$0]++' | fzf | pbcopy"
