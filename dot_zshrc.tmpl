stty -ixon

export ZSH=$HOME/.oh-my-zsh
ZSH_THEME="agnoster"
plugins=(git)
source $ZSH/oh-my-zsh.sh

# Aliases
{{- if eq .chezmoi.os "linux" }}
alias open="nautilus"
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'
{{- end }}
alias vim="nvim"
alias trel="tmux source-file ~/.tmux.conf && echo 'Reloaded!'"
alias taf='tmux attach -t $(tmux list-sessions -F "#{session_name}" | fzf)'
alias tkf='tmux kill-session -t $(tmux list-sessions -F "#{session_name}" | fzf)'
# PATH
export PATH=$HOME/.local/bin:$PATH
export PATH=$HOME/.local/bin/claude.d:$PATH
{{- if eq .chezmoi.os "linux" }}
export TERM=xterm-256color
export PATH=$PATH:/opt/nvim-linux-x86_64/bin
{{- end }}

# mise
eval "$($HOME/.local/bin/mise activate zsh)"
